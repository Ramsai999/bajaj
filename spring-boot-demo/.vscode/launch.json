{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Spring Boot App",
            "request": "launch",
            "mainClass": "com.example.demo.DemoApplication",
            "projectName": "spring-boot-demo",
            "vmArgs": "-Dspring.profiles.active=dev",
            "args": "",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "console": "integratedTerminal",
            "env": {
                "JAVA_HOME": "/path/to/java/home"
            }
        }
    ]
}